					String lineFirst = carIn.readLine();
					while (lineFirst != null)
					{//begin of while
					display.append(lineFirst + "\n");
					lineFirst = carIn.readLine();
					}//end of while
					}//end o try
				catch (IOException ioe)
					{//begin of catch
						display.setText(ioe.getMessage());
					}//end of catch
			   	}//end of if
