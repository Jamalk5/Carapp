public class Car
{
	private String name;
	private String type;
	private String year;
	private int speed;

	public Car(String n, String t,String y, int s)
	{
		name = n;
		type = t;
		year = y;
		speed = s;
	}
	public String getMessage()
	{
		return "The car name is "+name+"." +"  The car's type is "+type+"."+"  The car's year is "+year+"."+"  The car's speed is "+speed+".\n";
	}
}//end of class
